          <div class="row">
            <div class="col-md-12">
              <div class="top-spacer"> </div>
            </div>
          </div> 
        </div><!-- /cont -->
        
      </div>
      
      
      <div class="container">
        <div class="row">
          
          <div class="col-md-12"> 
            
            <div class="panel" id="topPanel">
              <div class="panel-body form-c">
                
                
                
                <!--/stories-->
                <div class="row">    
                  <br>
                  <form action="/auth/signup" method="POST">
                    <div class="row">
                      <div class="col-12">
                        <div class="form-group">
                          <label for="name">Name</label>
                          <input type="text" class="form-control" required name="username" id="name">
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-12">
                        <div class="form-group">
                          <label for="password">Password</label>
                          <input type="text" class="form-control" required name="password" id="password">
                        </div>
                      </div>

                    </div>
                    <button type="submit" class="btn btn-success">Submit</button>
                  </form>
                </div>
                <hr>
                <h3><span><a href="/auth/signin"> Signin</a> If you have an account</span></h3>
                
                
  
                <!--/stories-->
                
                
              </div>
            </div>
                                                                                             
                                                          
                                                            
             </div><!--/col-12-->
        </div>
      </div>
                                                      
                                                                                      
      <hr>
      
