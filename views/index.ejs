              <li class="nav-item">
                <a href="/books" class="nav-link">Books</a>
              </li>
              <li class="nav-item">
                <a href="#" class="nav-link">Author</a>
              </li>
            
            </ul>
            <ul class="navbar-nav mx-auto">
              <li class="nav-item">
                <a href="/auth/logout" class="nav-link">Logout</a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-search"></i></a>
                <ul class="dropdown-menu" style="padding:12px;">
                  <form class="form-inline">
                    <button type="submit" class="btn btn-light float-right"><i class="glyphicon glyphicon-search"></i></button><input type="text" class="form-control float-left" placeholder="Search">
                  </form>
                </ul>
              </li>
            </ul>
          </nav>
        </div>
      </header>
      
      <div id="masthead">  
        <div class="container">
          <div class="row">
            <div class="col-md-7">
              <h1><%= pageTitle %>
                <p class="lead"></p>
              </h1>
            </div>
            <div class="col-md-5">
              <div class="card card-lg"> 
                <div class="row">
                  <div class="col-sm-12">
                    
                  
                  </div>
                </div>
              </div>
            </div>
          </div> 
        </div><!-- /cont -->
        
